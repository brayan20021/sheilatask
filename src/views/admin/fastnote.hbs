<div class="container p-4">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Notas rapidas</h3>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a type="button" class="btn btn-warning" href="/signature">
                        volver 
                        </a> </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <a type="button" class="btn btn-primary" href="/add-fast-notes">
                            Agregar nota rapida
                        </a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="container p-4">
        <div class="row">
            {{#each datos}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="col-md-4 float-right">
                            <a class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" data-bs-placement="top"
                                title="Editar nota" href="task/edit/{{id}}"><span class="fa-fw select-all fas"></span>
                                </dt>
                                </dl></a>
                            <a class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="top"
                                title="Eliminar nota" onclick="deletenote({{id}})"><span
                                    class="fa-fw select-all fas"></span></dt></a>
                        </div><br>

                        <a href="">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> </li>
                        <li class="list-group-item">
                            <p><strong>Agregado hace:</strong> {{timeago create_at }}</p>
                        </li>
                    </ul>   
                </div>
            </div>
            {{else}}
            <div class="col-md-8 mx-auto">
                
                    <center>
                        <p><strong>Aun no tiene apuntes, crea uno!</strong></p>
                    </center>
                    
            </div>
            {{/each}}
        </div>
    </div>