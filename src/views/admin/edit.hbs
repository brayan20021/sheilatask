<div class="container p-12">

    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{task.id}}" method="post">
                    .<div class="mb-3">
                      <input type="text" name="title" id="" value="{{task.title}}" class="form-control" placeholder="Name" aria-describedby="helpId">
                    </div>

                    <div class="form-group">
                        <div class="mb-3">
                          <textarea class="form-control" name="description" id="" rows="3" placeholder="Description">{{task.description}}</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                       <center><div class="date-input-container">
                        <h6>Fecha de entrega</h6>
                        <input type="date" name="dueDate" id="date-input" class="date-input">
                        </div>
                        
                        </center> 
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger btn-block">Save</button>
                    </div>
                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>