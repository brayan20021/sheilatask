<div class="container p-4">
  <div class="row">
    {{#each datos}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago create_at }}</p>
                        <a href="links/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="links/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card body tex-center">
                        <p><strong> A link has been created yet</strong></p>
                        <a class="btn btn-success" href="/add">Create One!</a>
                    </div>
                </div>
    {{/each}}
  </div>
</div>